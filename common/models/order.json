{
  "name": "Order",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "mongodb": {
      "collection": "C2C_ORDER_COLLECTION"
    },
    "validateUpsert": true
  },
  "properties": {
    "orderId": {
      "type": "string"
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "orderDate": {
      "type": "date"
    },
    "orderStatus": {
      "type": "string"
    },
    "productId": {
      "type": "string"
    },
    "unit": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "userId"
    },
    "product":{
      "type":"belongsTo",
      "model":"Product",
      "foreignKey":"productId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": ["create","find"]
    }
  ],
  "methods": []
}
