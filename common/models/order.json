{
    "name": "Order",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "mongodb": {
            "collection": "C2C_ORDER_COLLECTION"
        },
        "validateUpsert": true
    },
    "properties": {
        "orderId": {
            "type": "string"
        },
        "userId": {
            "type": "string"
        },
        "productId": {
            "type": "string"
        },
        "orderDate": {
            "type": "date"
        },
        "orderStatus": {
            "type": "string"
        },
        "productId": {
            "type": "string"
        },
        "unit": {
            "type": "number"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "User",
            "foreignKey": "userId"
        },
        "userInfo":{
          "type": "embedsOne",
          "model": "User",
          "property":["email" , "address"]
        },
        "productInfo":{
          "type": "embedsOne",
          "model": "Product",
          "property":["productName"]
        }
    },
    "acls": [{
        "accessType": "*",
        "principalType": "ROLE",
        "principalId": "$everyone",
        "permission": "DENY"
    }, {
        "accessType": "WRITE",
        "principalType": "ROLE",
        "principalId": "$authenticated",
        "permission": "ALLOW",
        "property": ["create"]
    },{
        "accessType": "READ",
        "principalType": "ROLE",
        "principalId": "admin",
        "permission": "ALLOW",
        "property": ["find"]
    }],
    "methods": []
}